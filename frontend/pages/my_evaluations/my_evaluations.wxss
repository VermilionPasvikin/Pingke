.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  background: white;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.count {
  font-size: 24rpx;
  color: #999;
}

.evaluations-list {
  padding: 20rpx;
}

.evaluation-item {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.evaluation-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.course-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.action-btn.delete {
  color: #ff4444;
  background: #fff0f0;
}

.score-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.score {
  display: flex;
  align-items: baseline;
}

.score-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #07C160;
}

.score-max {
  font-size: 24rpx;
  color: #999;
  margin-left: 4rpx;
}

.date {
  font-size: 24rpx;
  color: #999;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.tag {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  color: #666;
}

.comment {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
  margin-bottom: 20rpx;
}

.stats {
  font-size: 24rpx;
  color: #999;
}

.empty, .loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}
