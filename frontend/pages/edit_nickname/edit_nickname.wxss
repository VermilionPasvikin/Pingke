.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

.form {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.form-item {
  display: flex;
  align-items: center;
}

.label {
  font-size: 28rpx;
  color: #333;
  width: 120rpx;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.tips {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

.save-btn {
  background: #07C160;
  color: white;
  border-radius: 12rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
}

.save-btn[disabled] {
  background: #ddd;
  color: #999;
}
