.filter-bar {
  display: flex;
  margin-bottom: 20px;
  padding: 15px;
  background-color: #fff;
  border-radius: 16px;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  animation: fadeIn 0.5s ease-in 0.1s both;
  gap: 10px;
}

.filter-item {
  flex: 1;
  padding: 8px 12px;
  background-color: #f0f2f5;
  border-radius: 20px;
  font-size: 14px;
  color: #666;
  transition: all 0.3s ease;
  border: 1px solid #e6e8eb;
  text-align: center;
}

.filter-item:active {
  background-color: #e6e8eb;
  transform: scale(0.98);
}

/* å­¦é™¢ç­›é€‰æŒ‰é’®æ ·å¼ */
.filter-bar button {
  flex: 1;
  height: 36px;
  line-height: 36px;
  font-size: 14px;
  padding: 0 12px;
  border-radius: 20px;
  transition: all 0.3s ease;
  text-align: center;
}

.filter-bar button:active {
  transform: scale(0.98);
}

