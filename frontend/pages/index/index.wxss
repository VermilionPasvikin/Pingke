.course-list {
  margin-bottom: 25px;
}

.course-item {
  background-color: #fff;
  border-radius: 16px;
  padding: 20px;
  margin-bottom: 15px;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  animation: listItemFadeIn 0.6s ease forwards;
  position: relative;
  overflow: hidden;
}

/* ä¸ºæ¯ä¸ªè¯¾ç¨‹é¡¹è®¾ç½®ä¸åŒçš„åŠ¨ç”»å»¶è¿Ÿ */
.course-item:nth-child(1) { animation-delay: 0.1s; }
.course-item:nth-child(2) { animation-delay: 0.2s; }
.course-item:nth-child(3) { animation-delay: 0.3s; }
.course-item:nth-child(4) { animation-delay: 0.4s; }
.course-item:nth-child(5) { animation-delay: 0.5s; }
.course-item:nth-child(6) { animation-delay: 0.6s; }
.course-item:nth-child(7) { animation-delay: 0.7s; }
.course-item:nth-child(8) { animation-delay: 0.8s; }
.course-item:nth-child(9) { animation-delay: 0.9s; }
.course-item:nth-child(10) { animation-delay: 1s; }

.course-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 4px;
  height: 100%;
  background: linear-gradient(180deg, #07c160, #52c41a);
}

.course-item:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12px;
}

.course-name {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  flex: 1;
  line-height: 1.4;
  transition: color 0.3s ease;
}

.course-item:hover .course-name {
  color: #07c160;
}

.course-code {
  font-size: 13px;
  color: #666;
  margin-left: 12px;
  background-color: #f0f2f5;
  padding: 4px 10px;
  border-radius: 12px;
  font-weight: 500;
}

.course-info {
  display: flex;
  margin-bottom: 12px;
  font-size: 15px;
  color: #888;
  gap: 20px;
}

.teacher-name {
  display: flex;
  align-items: center;
  gap: 5px;
}

