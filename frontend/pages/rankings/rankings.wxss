.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(247, 249, 252, 0.95);
  z-index: 999;
}

.loading-spinner {
  width: 50px;
  height: 50px;
  border: 4px solid rgba(7, 193, 96, 0.1);
  border-top: 4px solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  box-shadow: 0 0 20px rgba(7, 193, 96, 0.3);
  margin-bottom: 20px;
}

.loading-text {
  font-size: 16px;
  color: #07c160;
  font-weight: 500;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes pulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.7; transform: scale(1.05); }
}

.container {
  padding: 0 0 20px;
  background-color: #f7f9fc;
  position: relative;
  min-height: 100vh;
}

